<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/fondecran0"
    tools:context="com.example.miniprojet.miniprojet.activity.SubscriptionActivity">



    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:inputType="textPersonName"
        android:hint="username"
        android:ems="10"
        android:id="@+id/sub_username"
        android:background="#ffffff"
        android:layout_marginBottom="0dp"
        android:layout_above="@+id/sub_email"
        android:layout_alignRight="@+id/sub_email"
        android:layout_alignEnd="@+id/sub_email"
        android:layout_marginTop="30dp"
        android:layout_alignLeft="@+id/sub_email"
        android:layout_alignStart="@+id/sub_email" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:inputType="textPersonName"
        android:hint="email"
        android:ems="10"
        android:id="@+id/sub_email"
        android:background="#ffffff"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/sub_password"
        android:layout_alignRight="@+id/sub_password"
        android:layout_alignEnd="@+id/sub_password"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/sub_password"
        android:layout_alignStart="@+id/sub_password" />





    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/sub_password"
        android:hint="mot de passe"
        android:background="@android:color/white"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="S&apos;inscrire"
        android:id="@+id/sub_btsub"
        android:layout_gravity="right"
        android:layout_below="@+id/sub_password"
        android:layout_toRightOf="@+id/sub_btcancel"
        android:layout_toEndOf="@+id/sub_btcancel" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Annuler"
        android:id="@+id/sub_btcancel"
        android:layout_gravity="left"
        android:layout_below="@+id/sub_password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inscription"
        android:ems="30"
        android:textColor="#ffffff"
        android:id="@+id/textView3"
        android:layout_above="@+id/sub_username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="40dp" />

</RelativeLayout>
